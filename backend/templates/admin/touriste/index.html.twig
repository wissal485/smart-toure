{% extends 'base.html.twig' %}

{% block title %}Touriste index{% endblock %}

{% block body %}
    <h1>Touriste index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for touriste in touristes %}
            <tr>
                <td>{{ touriste.id }}</td>
                <td>
                    <a href="{{ path('app_touriste_show', {'id': touriste.id}) }}">show</a>
                    <a href="{{ path('app_touriste_edit', {'id': touriste.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_touriste_new') }}">Create new</a>
{% endblock %}
